<Styles
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:controls="using:HomeLabManager.Manager.Controls"
	xmlns:materialIcons="using:Material.Icons.Avalonia">
	<Design.PreviewWith>
		<Border Padding="20">
			<controls:PageNavButton Icon="Toolbox" Text="Tools" />
		</Border>
	</Design.PreviewWith>

	<Style Selector=":is(Button) StackPanel">
		<Setter Property="Margin" Value="4,4,4,4" />
		<Setter Property="Orientation" Value="Horizontal" />
	</Style>

	<Style Selector=":is(Button) materialIcons|MaterialIcon">
		<Setter Property="Width" Value="24" />
		<Setter Property="Height" Value="24" />
		<Setter Property="VerticalAlignment" Value="Center" />
	</Style>

	<Style Selector=":is(Button) TextBlock">
		<Setter Property="VerticalAlignment" Value="Center" />
		<Setter Property="FontWeight" Value="Bold" />
		<Setter Property="FontSize" Value="14" />
	</Style>
</Styles>
