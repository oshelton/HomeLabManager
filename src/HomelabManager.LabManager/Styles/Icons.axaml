<Styles
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:materialIcons="using:Material.Icons.Avalonia">
	<Design.PreviewWith>
		<Border Padding="20">
			<materialIcons:MaterialIcon Classes="ValidationError" />
		</Border>
	</Design.PreviewWith>

	<Style Selector="materialIcons|MaterialIcon.ValidationError">
		<Setter Property="Height" Value="24" />
		<Setter Property="Width" Value="24" />
		<Setter Property="Kind" Value="Error" />
		<Setter Property="Foreground" Value="{DynamicResource ValidationErrorBrush}" />
	</Style>
</Styles>
