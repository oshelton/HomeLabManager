	xmlns:ir="clr-namespace:Avalonia.Xaml.Interactions.Responsive;assembly=Avalonia.Xaml.Interactions.Responsive"
	xmlns:materialIcons="using:Material.Icons.Avalonia">
	<Design.PreviewWith>
		<Grid
			Width="600"
			Height="500"
			ColumnDefinitions="*,*"
			RowDefinitions="*,*">
