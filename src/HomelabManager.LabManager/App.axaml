<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialThemes="clr-namespace:Material.Styles.Themes;assembly=Material.Styles"
             xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             x:Class="HomeLabManager.Manager.App">
  <Application.Styles>
    <materialThemes:MaterialTheme BaseTheme="Dark" PrimaryColor="Red" SecondaryColor="Lime" />
    <StyleInclude Source="avares://Material.Icons.Avalonia/App.xaml"/>

    <Style Selector=":is(Control).ButtonIcon">
      <Setter Property="Width" Value="32" />
      <Setter Property="Height" Value="32" />
    </Style>
  </Application.Styles>
</Application>
