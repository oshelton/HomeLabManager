<Application
	x:Class="HomeLabManager.Manager.App"
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
	xmlns:materialThemes="clr-namespace:Material.Styles.Themes;assembly=Material.Styles"
	RequestedThemeVariant="Dark">
	<Application.Resources>
		<!--  Simple style resources  -->
		<SolidColorBrush x:Key="CardContentDarkBackgroundBrush" Color="#111111" />
	</Application.Resources>

	<Application.Styles>

		<!--  Third Party Styles  -->
		<materialThemes:MaterialTheme
			BaseTheme="Dark"
			PrimaryColor="Red"
			SecondaryColor="Lime" />
		<materialIcons:MaterialIconStyles />

		<StyleInclude Source="avares://AvaloniaEdit/Themes/Fluent/AvaloniaEdit.xaml" />

		<!--  Common Application Styles  -->
		<StyleInclude Source="/Styles/AddItemInlineSeperator.axaml" />
		<StyleInclude Source="/Styles/AvaloniaEdit.axaml" />
		<StyleInclude Source="/Styles/Buttons.axaml" />
		<StyleInclude Source="/Styles/Containers.axaml" />
		<StyleInclude Source="/Styles/Icons.axaml" />
		<StyleInclude Source="/Styles/TextBoxes.axaml" />
		<StyleInclude Source="/Styles/ToolTips.axaml" />
	</Application.Styles>
</Application>
