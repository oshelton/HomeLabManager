<ResourceDictionary
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:dialogs="using:HomeLabManager.Manager.SharedDialogs"
	xmlns:materialControls="using:Material.Styles.Controls">
	<Design.PreviewWith>
		<ContentControl MaxWidth="350" ContentTemplate="{StaticResource SimpleSavingDataDialog}">
			<ContentControl.Content>
				<dialogs:SimpleSavingDataDialogViewModel />
			</ContentControl.Content>
		</ContentControl>
	</Design.PreviewWith>

	<DataTemplate x:Key="SimpleSavingDataDialog" DataType="{x:Type dialogs:SimpleSavingDataDialogViewModel}">
		<StackPanel MaxWidth="350" Margin="8">
			<ProgressBar Classes="circular" IsIndeterminate="True" />

			<TextBlock
				Margin="8"
				HorizontalAlignment="Center"
				Classes="Body1"
				Text="{Binding SaveMessage}"
				TextWrapping="Wrap" />
		</StackPanel>
	</DataTemplate>
</ResourceDictionary>
